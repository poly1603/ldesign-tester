    "chart.js": "^4.4.0",
    "better-sqlite3": "^9.3.0",
    "ejs": "^3.1.9",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "typescript": "^5.7.3",
    "vitest": "^2.0.0",
